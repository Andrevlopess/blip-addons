{
  "compilerOptions": {
    "sourceMap": true,
    "target": "es6",
    "module": "commonjs",
    "jsx": "react",
    "lib": ["es2019", "dom"],
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "@features/*": ["src/app/Features/*"],
      "@commands/*": ["src/app/Commands/*"],
      "@components/*": ["src/app/Components/*"],
      "~/*": ["src/app/*"]
    }
  },
  "exclude": ["node_modules"]
}
